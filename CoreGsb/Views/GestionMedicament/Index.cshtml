@model System.Data.DataTable
@using System.Data;
@{
    ViewData["Title"] = "Index";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    jQuery(document).ready(function () {
        jQuery('#TableMedicament').DataTable();
    });
</script>




    <div class="container">
        <div class="blanc">
            <center ><h1>Liste des Medicaments </h1> </center >
        </div>

    <div class="blanc">
        <a asp-controller="GestionMedicament" asp-action="AjouterMedicament">
            <span class="glyphicon glyphicon-pencil btn btn-success" data-toggle="tooltip" data-placement="top" title="Ajouter">
                Ajouter un Medicament
            </span>
        </a>
    </div>

    <table class="table table-bordered table-striped" id="TableMedicament">
            <thead>
            <tr>

                <th>Nom comercial </th>
                <th>Famille</th>
                <th>Effet</th>
                <th>Contre Indication</th>
                <th>Presentation</th>
                <th>Depot legal</th>
                <th>Qte Formuler</th>
                <th>Prix echantillion</th>
                <th>Modification</th>
                <th>Supression</th>
                <th>Gestion Formulation</th>

            </tr>
            </thead>
            @foreach (DataRow dataRow in Model.Rows)
        {
            <tr>


                

                <td> @dataRow.ItemArray[1] </td>
                <td> @dataRow.ItemArray[2] </td>
                <td> @dataRow.ItemArray[3] </td>
                <td> @dataRow.ItemArray[4] </td>
                <td> @dataRow.ItemArray[5] </td>
                <td> @dataRow.ItemArray[6] </td>
                <td> @dataRow.ItemArray[7] </td>
                <td> @dataRow.ItemArray[8] </td>


                 


               

                <td>
                        <a href="@Url.Action("ModiffierMédicament", "GestionMedicament", new { id = dataRow.ItemArray[0].ToString()})">
                        <span class="glyphicon glyphicon-pencil btn btn-warning" data-toggle="tooltip" data-placement="top" title="Modifier">
                           Modifier 
                        </span>
                    </a>
                </td>

                <td>
                    <a href="@Url.Action("SupprimerMedicament", "GestionMedicament", new { id = dataRow.ItemArray[0].ToString()})">

                        <span class="glyphicon glyphicon-remove btn  btn-danger" data-toggle="tooltip" data-placement="top" title="Supprimer"   >
                            Supprimer
                        </span>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Index", "Prescription", new { id = dataRow.ItemArray[0].ToString()})">
                        <span class="glyphicon   glyphicon-info-sign btn btn-primary" data-toggle="tooltip" data-placement="top" title="Gestion Prescription">
                            Géstion Prescription
                        </span>
                    </a>
                </td>
            </tr>
        }

               
                
            
   
           
        </table>
    <script>
        jQuery(document).ready(function () {
            $('#TableMedicament').DataTable({
                "columnDefs": [{
                    "targets": [7],
                    "visible": true,
                    "searchable": true
                }]
            });
    </script>
    </div>





