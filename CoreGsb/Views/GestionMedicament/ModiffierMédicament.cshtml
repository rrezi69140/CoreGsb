@model System.Data.DataTable
@using System.Data;
@{
    ViewData["Title"] = "Modiffiermédicament";
}

    <center><h1> Modifer un medicament  </h1></center>
    <div class="form-horizontal">

   
    <form asp-controller="GestionMedicament" asp-action="PostModiffierMédicament" method="post" class="login-form">
            <div class="form-group">
                <label class="col-md-3 control-label"> Famille: </label>
                <div class="col-md-6 col-md-3">
                    <select id="Famille" name="Famille">
                        @foreach (DataRow dataRow in ViewBag.FamilleMedicament.Rows)
                        {
                            <option value="@dataRow.ItemArray[0]">@dataRow.ItemArray[1]</option>
                        }


                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label"> Depot legal: </label>
                <div class="col-md-6 col-md-3">
                    <input type="text" name="DepotLegal" class="form-control" value="@ViewBag.Medicament.GetDepotLegal()" required autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label"> Nom Commercial: </label>
                <div class="col-md-6 col-md-3">
                    <input type="text" name="NomCommercial" class="form-control" value="@ViewBag.Medicament.GetNomCommercial()" required autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label"> Effets: </label>
                <div class="col-md-6 col-md-3">
                    <input type="text" name="Effets" class="form-control" value="@ViewBag.Medicament.GetEffets()" required autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label"> Contre Indication: </label>
                <div class="col-md-6 col-md-3">
                    <input type="text" name="ContreIndication" class="form-control" value="@ViewBag.Medicament.GetContreIndication()" required autofocus>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-3 control-label"> Prix Echantillon </label>
                <div class="col-md-6 col-md-3">
                    <input type="text" name="PrixEchantillon" class="form-control" value="@ViewBag.Medicament.GetPrixEchantillon()" required autofocus>
                </div>
            </div>

        <input type ="text" style="display:none" name="IdMedicament" value="@ViewBag.Medicament.GetIdMedicament()"/>

            <div class="form-group">
                <div class="col-md-6 col-md-offset-3">
                    <button type="submit" class="btn btn-success mb-2">
                        <span class="glyphicon glyphicon-log-in"></span> Valider
                    </button>
                </div>
            </div>


            <div class="col-md-6 col-md-offset-3">
            </div>

        </form>
       

    </div>
</div>
